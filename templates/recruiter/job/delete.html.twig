{# templates/recruiter/job/delete.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Delete Job{% endblock %}

{% block body %}
    <h1>Delete Job</h1>

    <p>Are you sure you want to delete this job?</p>

    {{ form_start(deleteForm, {'action': path('recruiter_job_delete', {'id': job.id}), 'method': 'DELETE'}) }}
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ job.id) }}">
        <button type="submit">Delete</button>
    {{ form_end(deleteForm) }}

    <a href="{{ path('recruiter_job_list') }}">Cancel</a>
{% endblock %}
